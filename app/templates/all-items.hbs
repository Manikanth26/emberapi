{{page-title "AllItems"}}
<h1 class="mobiles-heading">Mobiles</h1>
<table class="all-table">
    <tr>
        <th>ID</th>
        <th>Name</th>
    </tr>
    {{#each this.model as |model|}}
    <tr>
        <td>{{model.id}}</td>
        <td><LinkTo @route="get-item" @model="{{model.id}}">{{model.name}}</LinkTo></td>
    </tr>
    {{/each}}
</table>

<button><LinkTo @route="add-item">Add Item</LinkTo></button>
<button type="button">Update Item</button>
<button type="button">Delete Item</button>

{{outlet}}